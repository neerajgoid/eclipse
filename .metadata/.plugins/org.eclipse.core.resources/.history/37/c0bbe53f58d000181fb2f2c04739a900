package jdbc;

import java.sql.Connection;
import java.sql.SQLException;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) throws SQLException, ClassNotFoundException {
		// TODO Auto-generated method stub
		
		initialCheck();
		insertCheck();
		updates();
	
		
	}
	
	public static void initialCheck() {
		
		DBConnect dbconnect = new DBConnect(); // Object of the DBConnection Class
		
		try {
			Connection con = dbconnect.connect(); // Calling the connect method of the DBConnection Class
			
			if(con!=null) {
				System.out.println("Connection Successful");
			}
			else {
				System.out.println("Failed to connect to sql db");
			}
				
		} 
		
		catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
	}
	
	public static void insertCheck() throws SQLException, ClassNotFoundException {
		Scanner scanner = new Scanner(System.in);
		DBConnect dbconnect = new DBConnect(); // Object of the DBConnection Class
		System.out.println("Welcome to the order system \n Please enter your customer ID else -1 for sign up");
		int id = scanner.nextInt();
		if(id==-1)
		{
			dbconnect.insertRecord();
		}
		else {
			dbconnect.checkDB(id);
		}
		
		//	scanner.close();
		
	}
	
	public static void updates() throws ClassNotFoundException, SQLException {
		Scanner scanner = new Scanner(System.in);
		DBConnect dbconnect = new DBConnect();
		System.out.println("Do you want to check and update any order? 1.Yes 2.No");
		int updateChoice = scanner.nextInt();
		if(updateChoice==1)
		{
			dbconnect.checkOrder();
		}
		else
		{
			System.out.println("Transaction Successful");
		}
		
		scanner.close();
	}
	

}
